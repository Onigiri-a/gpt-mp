page {
  background-color: #f1f1f1;
}



.AngleRight {
  display: flex;
  width: 0;
  height: 0;
  border-width: 10px;
  border-style: solid;
  border-color: transparent transparent transparent #149C89;
}

.server {
  display: flex;
  padding: 2vh 11vw 2vh 2vw;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.serverIcon {
  width: 10vw;
  height: 10vw;
}

.serverIcon image {
  width: 100%;
  height: 100%;
}

.serverContent {
  width: 71vw;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  z-index: 9;
}

.customer {
  display: flex;
  justify-content: flex-end;
  padding: 1vh 2vw 1vh 11vw;
  align-items: center;
}

.customerContent {
  width: 71vw;
  height: auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  z-index: 9;
}

.openAuth{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 9;
}
/*遮罩*/
.overlay{
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
  background: rgba(0,0,0,.1);
}
.detail-page{
  height: 780rpx;
  background: #fff;
  width: 89.5%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: absolute;
  bottom: 0;
  animation:myfirst .5s;
  padding: 40rpx;
  color: #000000;
}
@keyframes myfirst
{
  from {bottom: -780rpx;}
  to {bottom: 0}
}
@-webkit-keyframes myfirst /* Safari and Chrome */
{
  from {bottom: -780rpx;}
  to {bottom: 0}
}

.opt-top{
  display: flex;
  font-size: 28rpx;
  height:50rpx;
  line-height: 50rpx;
  justify-content:flex-start;
  margin: 20rpx 0;
}
.opt-top .appNickName{
  font-weight: bold;
  width: 180rpx;
}
.opt-top image{
  max-height: 100%;
  border-radius: 50rpx;
  margin-right: 10rpx;
}
.opt-top view{
  margin-right: 10rpx;
}
.opt-desc{

  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.opt-body{
  display: flex;
  border-top: 1rpx #e9e7ea solid;
  border-bottom: 1rpx #e9e7ea solid;
  flex-direction: column;
}
.opt-body .title{
  width: 20%;
}
.avatarUrl{
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx #e9e7ea solid;
}

.avatar{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  background: #fff;
}

.avatar image{
  max-height: 100%;
}
.avatar .jiantoua{
  height: 30rpx;
  width: 30rpx;
}
.nickName{
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.nickNameInput{
  width: 80%;
  height: 100%;
}
.opt-bottom{
  padding: 80rpx 0;
}
.btnAuth{
  width: 260rpx;
  background-color: #ffa300;
  color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 15rpx;
  text-align: center;
  margin: 0 auto 40rpx;
  font-size: 30rpx;
  line-height: 45rpx;
}
.bot-desc{
  font-size: 26rpx;
  color: #bebcbf;
}
.bot-desc .bot-navTo{
  color: #ffa300;
  font-weight: bold;
}
.message-left{
  display: contents;
}