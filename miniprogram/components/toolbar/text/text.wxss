/* components/toolbar/text/text.wxss */
@import "../toolbar.wxss";

.inputRoom {
  width: 100vw;
  max-height: 460px;
  border-top: 1px solid #EEE;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 20;
  padding: 28rpx;
}

.inputRoom image {
  width: 7vw;
}

input {
  width: 70vw;
  height: 45%;
  background-color: #F2F2F2;
  border-radius: 2px;
  padding: 4px;
  font-size: 28rpx;
  color: #444;
}

.chat-camera {
  width: 100%;
  height: 100px;
  float: left;
  overflow: hidden;
  background-color: #EDEDED;
  overflow-y: auto;
  margin-top: 60px;
}

.camera-feature {
  margin: 5% 0 0 5%;
  width: 18.75%;
  float: left;
  overflow: hidden;
  text-align: center;
  font-size: 20rpx;
}

.feature-src {
  background-color: #fff;
  border-radius: 15rpx;
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin: 0 calc(50% - 40rpx);
  text-align: center;
}

.feature-src>image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.feature-text {
  width: 100%;
  float: left;
  margin-top: 10rpx;
}


textarea {
  width: 550rpx;
  padding: 15rpx 0;
  max-height: 460px !important;
  padding-left: 10rpx;
  background-color: #F2F2F2;
  border-radius: 2px;
}

